{#
/**
 * @file
 * Default theme implementation for a media layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes.addClass('row') }}>

    {% if content.top %}
      <div {{ region_attributes.top.addClass('region--top') }}>
        {{ content.top }}
      </div>
    {% endif %}

    <div{{ region_attributes.first.addClass('col-sm-3') }}>
      {{ content.first }}
      <div class="img-center">
      <img src="/themes/custom/koala/images/Mecanico.svg" alt="Mecanico" class="img-cancelar">
      </div>
    </div>

    <div{{ region_attributes.second.addClass('col-sm-9') }}>
      {{ content.second }}
    </div>

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('region--bottom') }}>
        {{ content.bottom }}
        <div class="suscribcion-activa">
          {{drupal_view('suscripciones', 'block_1')}}
        </div>
      </div>
    {% endif %}

  </div>
{% endif %}
